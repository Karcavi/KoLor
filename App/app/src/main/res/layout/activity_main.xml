<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karcavi.kolor.MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/navigation"
        android:layout_toRightOf="@+id/navigation"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/title_welcome" />

     <ImageView
         android:layout_width="400dp"
         android:layout_height="250dp"
         android:id="@+id/imageView"
         android:src="@drawable/tuto1"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <Button
        android:id="@+id/button10"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/button13"
        android:layout_alignRight="@+id/button13"
        android:layout_below="@+id/button13"
        android:text="Fb login" />

    <Button
        android:id="@+id/button13"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/button14"
        android:layout_alignStart="@+id/button14"
        android:layout_below="@+id/button14"
        android:text="Gmail login" />

    <Button
        android:id="@+id/button14"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Email Login" />


</RelativeLayout>
