<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almost_white"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="18dp"
            android:text="@string/detailedAdTitle"
            android:textColor="@color/colorP"
            android:textSize="22sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="138dp"
            android:layout_height="136dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="27dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/createdBy"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="58dp"
            android:text="created by"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/createdBy"
            android:layout_marginTop="105dp"
            android:text="user email"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/createdBy" />


        <TextView
            android:id="@+id/adDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="37dp"
            android:layout_marginTop="171dp"
            android:text="Ad Details"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="37dp" />


        <TextView
            android:id="@+id/adTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/adDetails"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="227dp"
            android:text="Ad title: "
            android:textSize="16sp"
            android:layout_alignLeft="@+id/adDetails" />

        <TextView
            android:id="@+id/adName"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/createdBy"
            android:layout_alignTop="@+id/adTitle"
            android:layout_gravity="center_vertical"
            android:text="Ad title"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/adTitle" />


        <TextView
            android:id="@+id/adDescription"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/adDetails"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="207dp"
            android:text="Ad description: "
            android:textSize="16sp"
            android:layout_alignLeft="@+id/adDetails" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="179dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/createdBy"
            android:layout_alignTop="@+id/adDescription"
            android:layout_gravity="center_vertical"
            android:text="Ad description"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/adDescription" />




    </RelativeLayout>

</FrameLayout>